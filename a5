#include<stdio.h>
#include<math.h>

int main(){
  int A[5];
  int pares = 0;

   for(int i = 0; i < 5; i++) {
   printf("digite um valor");
    scanf("%d", &A[i]);
   } 
       for(int i = 0; i < 5; i++){
       if(A[i] % 2 == 0){
          pares += 1;
      }
      
  }
        
   printf("%d\n", pares);
}
